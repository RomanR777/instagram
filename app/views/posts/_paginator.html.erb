<% if @star != 0 and @end != 0 %>
<ul class="pagination">

  <% if params[:page].nil? %>
    <li class="page-item"><a class="page-link" href="./?page=1">Previous</a></li>
  <% else %>
    <li class="page-item"><a class="page-link" href="./?page=<%= params[:page].to_i - 1 %>">Previous</a></li>
  <% end %>

  <% (@start..@end).each do |page| %>
    <% if (params[:page].nil? && page == 1) || page == params[:page].to_i %>
      <li class="page-item active">
        <a class="page-link" href="<%= "./?page=#{page}" %>">
          <%= page %>
          <span class="sr-only">(current)</span>
        </a>
      </li>
    <% else %>
      <li class="page-item">
        <a class="page-link" href="<%= "./?page=#{page}" %>">
          <%= page %></a>
      </li>
    <% end %>
  <% end %>

  <% if params[:page].nil? %>
    <li class="page-item"><a class="page-link" href="./?page=1">Previous</a></li>
  <% else %>
    <li class="page-item"><a class="page-link" href="./?page=<%= params[:page].to_i + 1 %>">Next</a></li>
  <% end %>

</ul>
<% end %>