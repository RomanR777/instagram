<% if @total_pages > 1 %>
<div class="d-flex justify-content-center">
<ul class="pagination">

  <% if @previous_page >= 1 && @current_page != @previous_page %>
    <li class="page-item"><a class="page-link" href="./?page=<%= @previous_page %>">Previous</a></li>
  <% end %>

  <li class="page-item active">
     <a class="page-link" href="./?page=<%= @current_page %>">
        <%= @current_page %> / <%= @total_pages %>
          <span class="sr-only">(current)</span>
      </a>
  </li>

  <% if @next_page <= @total_pages && @current_page != @next_page %>
    <li class="page-item"><a class="page-link" href="./?page=<%= @next_page %>">Next</a></li>
  <% end %>

</ul>
</div>
<% end %>